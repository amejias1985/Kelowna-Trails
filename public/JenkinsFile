pipeline {
    agent any
    environment {
        FIREBASE_DEPLOY_TOKEN = credentials('Firebase')
    }

    stages {
        stage('Building') {
            steps {
               sh 'firebase -V'
                echo 'Building Stage'
            }
        }

        stage('Testing') {
            steps {
                sh 'firebase deploy -P testing-a7078 --token "${FIREBASE_DEPLOY_TOKEN}"'
            }
        }

        stage('Staging') {
            steps {
                sh 'firebase deploy -P staging-caa00 --token "${FIREBASE_DEPLOY_TOKEN}"'
            }
        }

        stage('Production') {
            steps {
                sh 'firebase deploy -P production-1a671 --token "${FIREBASE_DEPLOY_TOKEN}"'
            }
        }

        stage('Black Box Testing') {
            steps {
                echo 'Running black-box tests...'
                // Pasos para ejecutar pruebas de caja negra con Selenium y JavaScript
                // Aqu√≠ se pueden agregar comandos para ejecutar pruebas con Selenium WebDriverIO o Protractor
                // Por ejemplo:
                // sh 'npm install selenium-webdriver'
                // sh 'npm test-blackbox'
            }
        }
    }
}

